{{> header }}
<body id="page-top">
    <div id="wrapper">
        {{> sidebarRepartidor}}
    
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                {{> topbar}}
                <div class="container-fluid">

                <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Factura</h1>

                    <form class="user text-center" action="regcli" method="POST">
                        <div class="row">
                            <div class="col-sm-12 col-lg-6">
                        <div class="form-group">
                            <input type="date" class="form-control" placeholder="Fecha..." name="fecha"required>
                        </div>
                                <div class="form-group">
                            <input type="text" class="form-control" placeholder="Nombre y Apellido..." name="name"required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Cédula..." name="ced" required>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="E-mail..." name="email" required>
                        </div>
                            </div>
                            <div class="col-sm-12 col-lg-6">
                        <div class="form-group">
                            <input type="number" class="form-control" placeholder="Teléfono..." name="tel" required  minlength="7"  maxlength="10"> 
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" placeholder="Subtotal..." name="subtotal" required  min="1"> 
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" placeholder="Total..." name="totalf" required  min="1"> 
                        </div>

                            </div>
                        </div>                                            
                        <div class="topbar-divider d-none d-sm-block"></div>
                        <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Detalles del Pedido</h6>
                                </div>
                                <div class="card-body text-center">
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th class="text-center">Nombre Producto</th>
                                                    <th class="text-center">Cantidad</th>
                                                    <th class="text-center">Total Producto</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each productos}}
                                                <tr>
                                                    <th class="text-center">{{this.nombreProd}}</th>
                                                    <th class="text-center">{{this.cant}}</th>
                                                    <th class="text-center">{{this.total}}</th>

                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </div>                                  
                                </div>
                            </div>

                        <div class="form-group ">
                            <input type="submit" class="btn btn-primary btn-lg bg-gradient-primary" value="Guardar Factura">
                        </div>
                    </form>
                </div>              
            </div>
        {{> footer}}   
        </div>
    </div>
    
    {{> modalSalir}}

    <!-- Bootstrap core JavaScript-->
    <script src="assets/vendor/jquery/jquery.min.js"></script>
    <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="assets/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="assets/js/sb-admin-2.min.js"></script>


</body>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    {{#if alert}}
        <script>
        Swal.fire({
            title: '{{alertTitle}}',
            text: '{{alertMessage}}',
            icon: '{{icon}}',
            showConfirmButton: '{{showConfirmButton}}',
            timer: '{{timer}}'
        }).then(()=>{
            window.location = '/{{ruta}}'
        })
    </script>
    {{/if}}
</html>