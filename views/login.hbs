{{> header }}

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-md-6">

                <div class="card o-hidden border-0 shadow-lg mt-5 bg-dark">

                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <img src="assets/img/logoT.png" alt="">
                                </div>
                                <h6 class="text-center text-white">Quién desea Ingresar Sesión?</h6>
                                <div class="d-flex justify-content-center">
                                    <ul class="nav nav-pills m-4" id="pills-tab" role="tablist">
                                        <li class="nav-item mr-2">
                                            <a class="nav-link bg-success text-white" id="pills-home-tab" data-toggle="pill" href="#loginE" role="tab" aria-selected="true">Empleado</a>
                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link bg-success text-white" id="pills-profile-tab" data-toggle="pill" href="#loginC" role="tab" aria-selected="false">Cliente</a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="tab-content" id="pills-tabContent">
                                    <div class="tab-pane fade" id="loginE" role="tabpanel" aria-labelledby="pills-home-tab">
                                        <h6 class="text-center text-white">Empleado</h6>
                                        <form class="user" action="/auth" method="post">
                                            <div class="form-group">
                                                <input type="email" class="form-control form-control-user" name="user" id="user" placeholder="Correo Electrónico..." required>
                                            </div>
                                            <div class="form-group">
                                                <input type="password" class="form-control form-control-user" name="pass" id="pass" placeholder="Contraseña..." required>
                                            </div>
                                            <hr>
                                            <div class="form-group">
                                                <input type="submit" class="btn btn-primary btn-user btn-block" value="Iniciar Sesión">
                                            </div>

                                        </form>
                                    </div>
                                    <div class="tab-pane fade" id="loginC" role="tabpanel" aria-labelledby="pills-home-tab">
                                            <h6 class="text-center text-white">Cliente</h6>
                                        <form class="user" action="/authCliente" method="post">
                                            <div class="form-group">
                                                <input type="email" class="form-control form-control-user" name="user" id="user" placeholder="Correo Electrónico..." required>
                                            </div>
                                            <div class="form-group">
                                                <input type="password" class="form-control form-control-user" name="pass" id="pass" placeholder="Contraseña..." required>
                                            </div>
                                            <hr>
                                            <div class="form-group">
                                                <input type="submit" class="btn btn-primary btn-user btn-block" value="Iniciar Sesión">
                                            </div>

                                        </form>
                                    </div>
                                </div>



                                <hr>
                                <div class="text-center text-white">
                                    <a class="text-white" data-toggle="modal" data-target="#exampleModal">Regístrate</a>
                                </div>
                                <div class="text-center ">

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <footer class="page-footer font-small blue">

        <!-- Copyright -->
        <div class="footer-copyright text-center py-3 text-white">© {{ getAnio }} Copyright:
            <a href="" class="text-white"> InVirtualNetworks</a>
        </div>
        <!-- Copyright -->
    </footer>
    {{> modalLogin}} {{> scripts}}
</body>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
{{#if alert}}
<script>
    Swal.fire({
        title: '{{alertTitle}}',
        text: '{{alertMessage}}',
        icon: '{{icon}}',
        showConfirmButton: '{{showConfirmButton}}',
        timer: '{{timer}}'
    }).then(() => {
        window.location = '/{{ruta}}'
    })
</script>
{{/if}}

</html>