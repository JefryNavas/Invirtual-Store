{{> header }}
<body id="page-top">
    <div id="wrapper">

        {{> sidebarRepartidor}}      
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                {{> topbar}}
                <div class="container-fluid">

                <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Registrar Pagos</h1>
                    <h3 class="h3 mb-4 text-gray-800">Pedido: {{codigo}} </h3>
                    <hr>
                    <form class="user text-center" action="regcli" method="POST">
                        <div class="row">
                            <div class="col-sm-12 col-lg-6">
                                 <div class="form-group">
                                     <label class="form-check-label">Total a Pagar ($) :</label>
                                    <input type="text" class="form-control" name="total" value="{{a_pagar}} " disabled>
                                </div>
                <div class="form-check">
                    <label class="form-check-label">Escoja el MÃ©todo de Pago :</label> <br>
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                    <label class="form-check-label" for="flexRadioDefault1">
                    Efectivo
                    </label> <br>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                    <label class="form-check-label" for="flexRadioDefault2">
                    Transferencia
                    </label>
                </div>                           
                        <div class="form-group">
                            <select class="form-control" style="border-radius: 10rem" name="medio" required>
                                <option selected>Tipo de Pago...</option>
                                <option>Al Contado</option>
                                <option>Por Cuotas</option>
                            </select>
                        </div>
                            </div>
                            <div class="col-sm-12 col-lg-6">
                                
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Monto Recibido..." name="total"required>
                                </div>

                                 <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Cambio..." name="total"required>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Saldo..." name="total"required>
                                </div>
                            </div>
                        </div>                                            
                        <hr>
                        <div class="form-group ">
                            <input type="submit" class="btn btn-primary btn-lg bg-gradient-primary" value="Registrar Pago">
                            <a class="btn btn-primary btn-lg bg-gradient-primary" href="/factura">Generar Factura</a>
                        </div>
                    </form>
                </div>              
            </div>
        {{> footer}}   
        </div>
    </div>
    
    {{> modalSalir}}   
{{> scripts}} 
</body>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    {{#if alert}}
        <script>
        Swal.fire({
            title: '{{alertTitle}}',
            text: '{{alertMessage}}',
            icon: '{{icon}}',
            showConfirmButton: '{{showConfirmButton}}',
            timer: '{{timer}}'
        }).then(()=>{
            window.location = '/{{ruta}}'
        })
    </script>
    {{/if}}
</html>