{{> header }}
<body id="page-top">
    <div id="wrapper">
        {{> sidebarAdmin}}
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                {{> topbar}}
                <div class="container-fluid">
                <!-- Page Heading -->
                    <!-- DataTales Example -->
                     {{#if resumen}}
                     <h5 class="m-0 font-weight-bold text-primary">Cliente: {{cli}}</h5>
                     <h5 class="m-0 font-weight-bold text-primary">Teléfono: {{tel}}</h5>
                        <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Detalles del Pedido: {{codigo}} </h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th class="text-center">Producto</th>                    
                                            <th class="text-center">Cantidad</th>
                                            <th class="text-center">Total Producto</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each resumen}}
                                        <tr>
                                            <th class="text-center">{{this.nombre_prod}}</th>
                                            <th class="text-center">{{this.cantidad}}</th>
                                            <th class="text-center">{{this.total}}</th>
                                        </tr>
                                        {{/each}}
                                                                              
                                    </tbody>
                                </table>
                            </div>
                            <h4 class="m-0 font-weight-bold text-primary">Costo total del Pedido: ${{a_pagar}}</h4>
                        </div>
                    </div>



                     {{else}}
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Todos los Pedidos</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th class="text-center">Código Pedido</th>                    
                                            <th class="text-center">Fecha de Entrega</th>
                                            <th class="text-center">Dirección</th>
                                            <th class="text-center">Estado</th>
                                            <th class="text-center">Detalles</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each codped}}
                                        <tr>
                                            <th class="text-center">{{this.cod_ped}}</th>
                                            <th class="text-center">{{this.fecha_entrega}}</th>
                                            <th class="text-center">{{this.calle_principal}} y {{this.calle_secundaria}} </th>
                                            <th class="text-center">{{this.estado}}</th>
                                            <th class="text-center"><form action="/tablePedidos" method="post"><input type="text" name="id" value="{{this.cod_ped}}" style="display:none;"><button type="submit" class="btn btn-primary btn-circle"><i class="fas fa-box-open"></i></button></form></th>
                                        </tr>
                                        {{/each}}
                                                                              
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                     {{/if}}                    

            </div>
            </div>

            
        {{> footer}}   
        </div>
    </div>

    {{> modalSalir}}   
    
{{> scripts}} 

</body>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    {{#if alert}}
        <script>
        Swal.fire({
            title: '{{alertTitle}}',
            text: '{{alertMessage}}',
            icon: '{{icon}}',
            showConfirmButton: '{{showConfirmButton}}',
            timer: '{{timer}}'
        }).then(()=>{
            window.location = '/{{ruta}}'
        })
    </script>
    {{/if}}
</html>

